{
  "name": "lambda-mjml-email",
  "version": "1.0.0",
  "description": "AWS Lambda function Email delivery AWS SES",
  "keywords": [],
  "homepage": "https://github.com/eunchurn/lambda-mjml-email#readme",
  "bugs": {
    "url": "https://github.com/eunchurn/lambda-mjml-email/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eunchurn/lambda-mjml-email.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "yarn mjml:resetPassword",
    "build": "tsc && tsc-alias",
    "postbuild": "copyfiles -u 2 lambda/src/**/*.ejs lambda/dist",
    "cleanup": "rm -rf lambda/dist/*",
    "deploy:all": "yarn script:build-dependency-layer; yarn tf:apply",
    "lint": "eslint --ext .js,.ts,.tsx ./lambda/src/",
    "mail:test": "yarn build && node lambda/dist/sendTest.js",
    "script:build-dependency-layer": "yarn install --prod; ./scripts/build-dependency-layer.sh; yarn install;",
    "tf:apply": "yarn build; cd terraform; terraform apply; yarn cleanup;",
    "tf:destroy": "cd terraform; terraform destroy",
    "tf:init": "cd terraform; terraform init",
    "tf:plan": "cd terraform; terraform plan",
    "update:all": "yarn tf:destroy -auto-approve; yarn deploy:all",
    "resetPassword:watch": "concurrently \"mjml --watch lambda/src/libs/templates/resetPassword.mjml -o lambda/src/libs/templates/resetPassword.html\" \"yarn serve:resetPassword:watch\"",
    "serve:resetPassword:watch": "echo \"\\033[0;33mhttp://localhost:1234/resetPassword\\033[0m\" && light-server -s ./lambda/src/libs/templates -p 1234 -w \"lambda/src/libs/templates/resetPassword.html\"",
    "mjml:resetPassword": "mjml -r lambda/src/libs/templates/resetPassword.mjml -o lambda/src/libs/templates/resetPassword.ejs"
  },
  "prettier": "@eunchurn/prettier-config",
  "dependencies": {},
  "devDependencies": {
    "@aws-sdk/client-lambda": "^3.224.0",
    "@aws-sdk/client-ses": "^3.224.0",
    "@eunchurn/eslint-config": "^0.1.11",
    "@eunchurn/prettier-config": "^0.0.5",
    "@types/aws-lambda": "^8.10.109",
    "@types/ejs": "^3.1.1",
    "@types/html-minifier": "^4.0.2",
    "@types/jest": "^29.2.4",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.11",
    "@types/nodemailer": "^6.4.6",
    "aws-lambda": "^1.0.7",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.0.0",
    "ejs": "^3.1.8",
    "html-minifier": "^4.0.0",
    "jest": "^29.3.1",
    "light-server": "^2.9.1",
    "mjml": "^4.13.0",
    "nodemailer": "^6.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.1",
    "typescript": "^4.9.3"
  }
}